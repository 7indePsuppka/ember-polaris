{{#with (component "polaris-choice/label"
  inputId=inputId
  label=label
  labelComponent=labelComponent
  labelHidden=labelHidden
) as |labelComponent|}}
  {{#if hasDescription}}
    <div>
      {{#component labelComponent}}
        {{yield}}
      {{/component}}

      <div class="Polaris-Choice__Descriptions">
        {{#if error}}
          <div class="Polaris-Choice__Error" id={{errorID}}>
            <div class="Polaris-Choice__ErrorIcon">
              {{polaris-icon source="alert"}}
            </div>
            {{error}}
          </div>
        {{/if}}

        {{#if helpText}}
          <div class="Polaris-Choice__HelpText" id={{helpTextID}}>
            {{helpText}}
          </div>
        {{/if}}
      </div>
    </div>
  {{else}}
    {{#component labelComponent}}
      {{yield}}
    {{/component}}
  {{/if}}
{{/with}}
