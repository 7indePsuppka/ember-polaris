{{#if breadcrumb.url}}
  {{#polaris-unstyled-link
    class="Polaris-Breadcrumbs__Breadcrumb"
    url=breadcrumb.url
    mouseUp=handleMouseUpByBlurring
  }}
    <span data-test-breadcrumb-icon class="Polaris-Breadcrumbs__Icon">
      {{polaris-icon source="chevron-left"}}
    </span>
    <span data-test-breadcrumb-content class="Polaris-Breadcrumbs__Content">
      {{breadcrumb.content}}
    </span>
  {{/polaris-unstyled-link}}
{{else}}
  <button
    class="Polaris-Breadcrumbs__Breadcrumb"
    type="button"
    onclick={{action "fireAction" breadcrumb.onAction}}
    onmouseup={{handleMouseUpByBlurring}}
  >
    <span data-test-breadcrumb-icon class="Polaris-Breadcrumbs__Icon">
      {{polaris-icon source="chevron-left"}}
    </span>
    <span data-test-breadcrumb-content class="Polaris-Breadcrumbs__Content">
      {{breadcrumb.content}}
    </span>
  </button>
{{/if}}
