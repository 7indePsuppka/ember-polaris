<tr class="Polaris-DataTable__TableRow" ...attributes>
  {{#each row as |cellText cellIndex|}}
    <PolarisDataTable::Cell
      @height={{get bodyCellHeights index}}
      @text={{cellText}}
      @contentType={{get contentTypes cellIndex}}
      @fixed={{eq cellIndex 0}}
      @truncate={{truncate}}
    />
  {{/each}}
</tr>
