{{polaris-data-table/cell
  header=true
  height=height
  text=heading
  contentType=(get-array-item contentTypes headingIndex)
  fixed=isFixed
  truncate=truncate
  defaultSortDirection=(if sortable defaultSortDirection)
  sorted=(if sortable (eq sortedColumnIndex headingIndex))
  sortable=(if sortable (get-array-item sortable headingIndex))
  sortDirection=(if sortable direction)
  onSort=(if sortable (action defaultOnSort headingIndex))
}}
