<div class={{if labelHidden "Polaris-Labelled--hidden"}} data-test-labelled={{dataTestLabelled}}>
  {{#if label}}
    <div class="Polaris-Labelled__LabelWrapper">
      {{#polaris-label
        id=id
        hidden=false
      }}
        {{label}}
      {{/polaris-label}}

      {{#if action}}
        {{polaris-button
          plain=true
          text=action.text
          disabled=action.disabled
          loading=action.loading
          accessibilityLabel=action.accessibilityLabel
          onClick=(action action.onAction)
        }}
      {{/if}}
    </div>
  {{/if}}

  {{yield}}

  {{#if shouldRenderError}}
    <div data-test-labelled-error class="Polaris-Labelled__Error">
      {{polaris-inline-error message=error fieldID=id}}
    </div>
  {{/if}}

  {{#if helpText}}
    <div data-test-label-help-text id={{helpTextId}} class="Polaris-Labelled__HelpText">
      {{render-content helpText}}
    </div>
  {{/if}}
</div>
