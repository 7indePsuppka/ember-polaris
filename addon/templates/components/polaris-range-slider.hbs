<PolarisLabelled
  @dataTestLabelled={{this.dataTestRangeSlider}}
  @id={{this.id}}
  @label={{@label}}
  @error={{@error}}
  @action={{@labelAction}}
  @labelHidden={{@labelHidden}}
  @helpText={{@helpText}}
>
  <div
    data-test-range-slider-wrapper
    class={{this.rangeWrapperClassNames}}
    style={{this.rangeWrapperStyle}}
  >
    {{#if @prefix}}
      <div data-test-range-slider-prefix class="Polaris-RangeSlider__Prefix">
        {{render-content @prefix}}
      </div>
    {{/if}}

    <div data-test-range-slider-input-wrapper class="Polaris-RangeSlider__InputWrapper">
      <input
        data-test-range-slider-input
        type="range"
        class="Polaris-RangeSlider__Input"
        id={{this.id}}
        name={{this.id}}
        min={{this.min}}
        max={{this.max}}
        step={{@step}}
        value={{@value}}
        disabled={{@disabled}}
        oninput={{fn this.handleChange}}
        onfocus={{fn this.onFocus}}
        onblur={{fn this.onBlur}}
        aria-valuemin={{this.min}}
        aria-valuemax={{this.max}}
        aria-valuenow={{@value}}
        aria-invalid={{this.hasError}}
        aria-describedby={{this.ariaDescribedBy}}
      >

      {{#if this.shouldShowOutput}}
        <output
          data-test-range-slider-output
          htmlFor={{this.id}}
          class="Polaris-RangeSlider__Output"
        >
          <div class="Polaris-RangeSlider__OutputBubble">
            <span class="Polaris-RangeSlider__OutputText">{{@value}}</span>
          </div>
        </output>
      {{/if}}
    </div>

    {{#if @suffix}}
      <div data-test-range-slider-suffix class="Polaris-RangeSlider__Suffix">
        {{render-content @suffix}}
      </div>
    {{/if}}
  </div>
</PolarisLabelled>
