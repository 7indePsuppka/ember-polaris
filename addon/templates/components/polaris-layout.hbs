{{#with (component "polaris-layout/section") as |section|}}
  {{#if sectioned}}
    {{#component section}}
      {{#if hasBlock}}
        {{yield (hash
          section=section
        )}}
      {{else}}
        {{text}}
      {{/if}}
    {{/component}}
  {{else}}
    {{#if hasBlock}}
      {{yield (hash
        section=section
      )}}
    {{else}}
      {{text}}
    {{/if}}
  {{/if}}
{{/with}}
