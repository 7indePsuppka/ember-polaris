{{#if day}}
  <button
    role="gridcell"
    class="Polaris-DatePicker__Day
      {{if selected ' Polaris-DatePicker__Day--selected'}}
      {{if disabled ' Polaris-DatePicker__Day--disabled'}}
      {{if today ' Polaris-DatePicker__Day--today'}}
      {{if applyInRangeStyles ' Polaris-DatePicker__Day--inRange'}}"
    tabindex={{tabIndex}}
    aria-label={{ariaLabel}}
    aria-selected={{selected}}
    aria-disabled={{disabled}}
    onclick={{action "handleClick" day}}
    onmouseover={{action "handleHover" day}}
    onfocus={{action "handleFocus" day}}
  >
    {{date}}
  </button>
{{else}}
  <div class="Polaris-DatePicker__EmptyDay"></div>
{{/if}}
