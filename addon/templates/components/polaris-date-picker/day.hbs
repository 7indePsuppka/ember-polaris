{{#if day}}
  <button
    data-test-date-picker-day
    data-test-date-picker-date={{dataTestDatePickerDate}}
    role="gridcell"
    class={{dayButtonClasses}}
    tabindex={{tabIndex}}
    aria-label={{ariaLabel}}
    aria-selected={{selected}}
    aria-disabled={{disabled}}
    disabled={{disabled}}
    onclick={{action onClick day}}
    onmouseover={{action onHover day}}
    onfocus={{action onFocus day}}
  >
    {{date}}
  </button>
{{else}}
  <div data-test-date-picker-day-empty class="Polaris-DatePicker__EmptyDay"></div>
{{/if}}
