{{#if (eq size "small")}}
  {{#polaris-stack vertical=true spacing="tight"}}
    {{polaris-icon
      color="inkLightest"
      source=iconDragDrop
    }}
  {{/polaris-stack}}
{{else if (eq size "medium")}}
  {{#polaris-stack vertical=true spacing="tight"}}
    {{polaris-link text=actionTitle}}
    {{polaris-caption text=actionHint}}
  {{/polaris-stack}}
{{else if (eq size "large")}}
  {{#polaris-stack vertical=true spacing="tight"}}
    {{#if (eq type "file")}}
      {{svg-jar assetFileUpload class=imageClasses}}
    {{/if}}

    {{#if (eq type "image")}}
      {{svg-jar assetImageUpload class=imageClasses}}
    {{/if}}

    {{polaris-button size="slim" text=actionTitle}}

    {{#polaris-caption}}
      {{polaris-text-style variation="subdued" text=actionHint}}
    {{/polaris-caption}}
  {{/polaris-stack}}
{{else if (eq size "extraLarge")}}
  {{#polaris-stack vertical=true}}
    {{#if (eq type "file")}}
      {{svg-jar assetFileUpload class=imageClasses}}
    {{/if}}

    {{#if (eq type "image")}}
      {{svg-jar assetImageUpload class=imageClasses}}
    {{/if}}

    {{polaris-button text=actionTitle}}
    {{polaris-text-style variation="subdued" text=actionHint}}
  {{/polaris-stack}}
{{/if}}
