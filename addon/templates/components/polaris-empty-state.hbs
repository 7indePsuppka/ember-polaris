<div class="Polaris-EmptyState__Section">
  <div class="Polaris-EmptyState__DetailsContainer">
    {{!-- template-lint-disable attribute-indentation --}}
    {{!-- TODO remove rule above once linter handles this correctly --}}
    {{#with
      (component "polaris-empty-state/details"
        heading=heading
        text=text
        action=action
        secondaryAction=secondaryAction
      )
      as |detailsComponent|
    }}
      {{#if hasBlock}}
        {{#component detailsComponent}}
          {{yield}}
        {{/component}}
      {{else}}
        {{component detailsComponent}}
      {{/if}}
    {{/with}}
  </div>

  <div class="Polaris-EmptyState__ImageContainer">
    {{!-- TODO: replace this with polaris-image when implemented. --}}
    <img src={{image}} role="presentation" alt="" class="Polaris-EmptyState__Image">
  </div>
</div>
