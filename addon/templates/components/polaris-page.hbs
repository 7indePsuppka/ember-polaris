<div class={{headerClass}}>
  {{#if hasBreadcrumbs}}
    <div class="Polaris-Page__Navigation">
      <nav role="navigation">
        {{#each breadcrumbs as |breadcrumb|}}
          <a class="Polaris-Breadcrumbs__Breadcrumb" data-polaris-unstyled="true">
            <span class="Polaris-Breadcrumbs__Icon">
              {{polaris-icon source="chevron-left"}}
            </span>
            {{breadcrumb.content}}
          </a>
        {{/each}}
      </nav>
    </div>
  {{/if}}

  {{#polaris-display-text tagName="h1" size="large"}}
    {{title}}
  {{/polaris-display-text}}

  {{#if hasActions}}
    <div class="Polaris-Page__Actions">
      {{#if primaryAction}}
        <div class="Polaris-Page__PrimaryAction">
          {{polaris-button
            primary=true
            text=primaryAction.text
            disabled=primaryAction.disabled
            onClick=(action primaryAction.action)
          }}
        </div>
      {{/if}}
    </div>
  {{/if}}
</div>

<div class="Polaris-Page__Content">
  {{#if hasBlock}}
    {{yield}}
  {{else}}
    {{text}}
  {{/if}}
</div>
