{{#polaris-resource-list/item
  itemId=itemId
  url=item.url
  accessibilityLabel=accessibilityLabel
  media=(component
    "polaris-avatar"
    customer=true
    size="medium"
    name=item.name
  )
}}
  <h3>
    {{polaris-text-style
      variation="strong"
      text=item.name
    }}
  </h3>
  <div>{{item.location}}</div>
{{/polaris-resource-list/item}}
